extends ./layout/main

block content
    h1 #{msg}
    form(action="/events/" method="POST")
        div(class="form-group")
            input(type="text", class="form-control" placeholder="Entre com o nome do evento" name="name")
        div(class="form-group")
            textarea(class="form-control" placeholder="Entre com a descrição", name="description")
        div(class="form-group")
            button(type="submit" class="btn btn-success") Save